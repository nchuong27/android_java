<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:src="@drawable/uploadimg" />

            <TextView
                android:id="@+id/nameProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgProduct"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:text="Tên" />

            <TextView
                android:id="@+id/priceProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgProduct"
                android:layout_below="@id/nameProduct"
                android:layout_marginStart="10dp"
                android:textColor="#F44336"
                android:textStyle="bold"
                android:text="Giá" />


            <TextView
                android:id="@+id/lableCate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgProduct"
                android:layout_below="@id/priceProduct"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:text="Danh mục:" />

            <TextView
                android:id="@+id/cateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/lableCate"
                android:layout_below="@id/priceProduct"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Áo" />
            <TextView
                android:id="@+id/labelSoLuong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgProduct"
                android:layout_below="@id/lableCate"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:text="Số lượng:" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lableCate"
                android:layout_toEndOf="@id/lableCate"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Có" />

            <TextView
                android:id="@+id/labelNoiBat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgProduct"
                android:layout_below="@id/labelSoLuong"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:text="Nổi bật:" />

            <TextView
                android:id="@+id/outstanding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/labelSoLuong"
                android:layout_toEndOf="@id/labelSoLuong"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Có" />


            <ImageView
                android:id="@+id/editProduct"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/b_edit" />
            <ImageView
                android:id="@+id/deleProduct"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_below="@id/editProduct"
                android:layout_marginEnd="34dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/baseline_delete_outline_24" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>