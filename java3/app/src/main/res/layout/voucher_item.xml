<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/item" />

            <TextView
                android:id="@+id/nameVoucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgProduct"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Tên Voucher" />

            <TextView
                android:id="@+id/desVoucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgProduct"
                android:layout_below="@id/nameVoucher"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="10sp"
                android:text="Mô tả Voucher" />


            <ImageView
                android:id="@+id/editVoucher"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:src="@drawable/b_edit" />
            <ImageView
                android:id="@+id/deleVoucher"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_below="@id/editVoucher"
                android:layout_marginEnd="34dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/baseline_delete_outline_24" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>