<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.Addproduct">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbarProduct"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Tên sản phẩm(*)" />

            <ImageView
                android:id="@+id/addproDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_done_24"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/toolbarProduct"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="6dp"/>

            <EditText
                android:id="@+id/addnameText"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="15sp"
                android:background="@drawable/edittext"
                android:layout_below="@id/textView5"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addnameText"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Danh mục(*)" />

            <Spinner
                android:id="@+id/spinnerCate"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingStart="12dp"
                android:textSize="15sp"
                android:background="@drawable/spinner"
                android:layout_below="@id/textView6"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinnerCate"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Mô tả(*)" />

            <EditText
                android:id="@+id/adddesText"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:textSize="15sp"
                android:background="@drawable/edittext"
                android:layout_below="@id/textView7"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/adddesText"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Giá(*)" />

            <EditText
                android:id="@+id/addpriceText"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:layout_below="@id/textView8"
                android:layout_marginTop="7dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:hint="000.VND"
                android:inputType="text"
                android:padding="12dp"
                android:textAlignment="textEnd"
                android:textSize="15sp" />
    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adddesText"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="110dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Giá gốc(*)" />
            <EditText
                android:id="@+id/addprice_orText"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:layout_below="@id/textView8"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="7dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:hint="000.VND"
                android:inputType="text"
                android:padding="12dp"
                android:textAlignment="textEnd"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addpriceText"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Giảm giá(*)" />
            <EditText
                android:id="@+id/addDiscountText"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="text"
                android:layout_below="@id/textView9"
                android:padding="12dp"
                android:textSize="15sp"
                android:background="@drawable/edittext"
                android:textAlignment="textEnd"
                android:hint="%" />
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addSLText"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Hình ảnh(*)" />
            <EditText
                android:id="@+id/addlink_Img"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="text"
                android:layout_below="@id/textView10"
                android:padding="12dp"
                android:textSize="15sp"
                android:background="@drawable/edittext"
                android:textAlignment="textEnd"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addlink_Img"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Hình nổi bật(*)" />
            <EditText
                android:id="@+id/addlink_NB"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="text"
                android:layout_below="@id/textView11"
                android:padding="12dp"
                android:textSize="15sp"
                android:background="@drawable/edittext"
                android:textAlignment="textEnd"/>
            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addDiscountText"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Số lượng(*)" />
            <EditText
                android:id="@+id/addSLText"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="text"
                android:layout_below="@id/textView13"
                android:padding="12dp"
                android:textSize="15sp"
                android:background="@drawable/edittext"
                android:textAlignment="textEnd"/>

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/addlink_NB"
                android:background="@drawable/edittext"
                android:layout_marginTop="10dp"
                android:text="Nổi bật" />

</RelativeLayout>