<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <RadioGroup
        android:id="@+id/radioGroupPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioButtonLowToHigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá từ thấp đến cao" />

        <RadioButton
            android:id="@+id/radioButtonHighToLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá từ cao đến thấp" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/cbDiscounted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chỉ hiển thị sản phẩm giảm giá" />

    <Button
        android:id="@+id/btnApply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Áp dụng"
        android:layout_gravity="end"
        android:layout_marginTop="16dp" />

</LinearLayout>
