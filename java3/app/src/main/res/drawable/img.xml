<!-- border_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@android:color/white" /> <!-- Màu nền -->
    <stroke
        android:width="2dp"
    android:color="@color/silver" />
    <corners android:radius="20dp" /> <!-- Bán kính radius cho góc bo, thay đổi 8dp tùy ý -->
    <padding android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp"/> <!-- Độ dày của border -->
</shape>
